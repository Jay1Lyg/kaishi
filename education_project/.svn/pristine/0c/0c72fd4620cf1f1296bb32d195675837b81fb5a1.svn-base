*{
    margin: 0;
    padding: 0;
}
html{
    /*background: #eee;*/
}
body{
    box-shadow: 0 0 20px #888888;
    padding: 0;
}
header{
    margin-top: 20px;
}
.ul2{
    width: 100%;
    margin: 0 auto;
}
.ul2 li{
    text-align: center;
    cursor: pointer;
    font-weight: bolder;
    background: #d6d6ea;

}
.ul2 li a{
    color: #333333;
    font-family: 微软雅黑;
    cursor: pointer;
}
.tab{
    background: white;
    border:1px solid #333333;
    width: 120%;
    display: none;
    position: absolute;
    z-index: 99;

}
.tab li{
    list-style: none;
    border-bottom: 1px solid #cccccc;
    line-height: 30px;
    cursor: pointer;
    text-align: left;
}
.tab li a{
    color: #333333;
    font-size: 14px;
}
.top_logo{
    width: 100%;
    height: 134px;
    margin: 0 auto;
    text-align: center;
}
.top_logo img{
    width: 221px;
    margin: 0 auto;
}

/*脚步*/

.footer{
    background: #c3c3c3;
    width: 100%;
    box-shadow: 0 0 10px #999;
}
.footer{
    padding: 40px 0;
}

.footer div .ul3 li{
    list-style: none;
    text-align: center;
}
.footer div .ul3 li img{
    width: 60px;
}
.footer div .ul4 li{
    list-style: none;
    text-align: center;
    font-family: 微软雅黑;
    font-size: 12px;
    color: #6b6b6b;
}

/*报名
*/
