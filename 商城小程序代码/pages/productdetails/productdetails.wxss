/* pages/productdetails/productdetails.wxss */
.produce-info{
	width: 100%
}
.produce-image{
	width: 750rpx;
	height: 750rpx;
	border: 1px solid #ddd;

}
.produce-detail{
	display: flex;

}
.produce-detail text{
	overflow:hidden; 
	text-overflow:ellipsis;
	display:-webkit-box; 
	-webkit-box-orient:vertical;
	-webkit-line-clamp:2; 
	color: #434343;
	margin: 30rpx 30rpx;
	font-size: 28rpx;
	flex: 4
}
.produce-detail image{
	width: 34rpx;
	height: 39rpx;
	margin: 35rpx 30rpx 0 0;
}
.price{
	display: flex;
	text-align: center;
	color: #a1a1a1;
	font-size: 26rpx;
}
.price text{
	flex: 1;
	line-height: 40rpx;
}
.price-detail{
	flex: 1;
}
.now-price{
	color: #e7242a;
	font-weight: bold;
	font-size: 40rpx;
	margin-right: 10rpx;
}
.ago-price{
	text-decoration: line-through
}
.parameter{
	width: 100%;
	display: flex;
	height: 90rpx;
	border-bottom:2px solid #f2f2f2 
}
.parameter text{
	flex: 1;
	color: #a1a1a1;
	font-size: 32rpx;
	margin: 0 30rpx;
	line-height: 90rpx;

}
.produce-tab{
	width: 100%;
	height: 90rpx;
	display: flex;
	text-align: center
}
.displayred{
	color: #e7242a
}
.produce-tab text{
	flex: 1;
	font-size: 32rpx;
	line-height: 90rpx;
	font-weight: bold;

}
.tab{
	margin-bottom: 120rpx;
}
.foot{
	width: 100%;
	display: flex;
	position: fixed;
	bottom: 0;
	left: 0;
	right: 0;
	height: 110rpx;
	background: white;
	z-index: 10;
}
.service{
	flex: 1;
	text-align: center
}
.service image{
	width: 50rpx;
	height: 44rpx;
	display: block;
	margin: 15rpx auto
}
.service text{
	font-size: 26rpx;
	color: #a1a1a1;
	display: block
}
.add-cart{
	flex: 2;
	text-align: center;
	line-height: 110rpx;
	background: #e7242a;
	color: white;
	border-right: 2rpx solid white;
	font-size: 36rpx
}
.buy{
	flex: 2;
	text-align: center;
	line-height: 110rpx;
	background: #e7242a;
	color: white;
	font-size: 36rpx
}